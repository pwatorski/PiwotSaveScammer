<UserControl x:Class="SaveScammer.TextEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveScammer"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Name="textBlock_label" TextWrapping="Wrap" Text="Label:" Margin="0,2,2,0"/>
            <TextBlock Name="textBlock_display" TextWrapping="Wrap" Text="display" Margin="0,2,0,0"/>
            <TextBox Name="textBlock_edit" TextWrapping="Wrap" Text="edit" Visibility="Collapsed"/>
            <Button Name="button_toggleEdit" Content="Edit" Margin="2,0,0,0" Click="button_toggleEdit_Click"/>
            <Button Name="button_editCancel" Content="Cancel" Margin="2,0,0,0" Click="button_editCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
